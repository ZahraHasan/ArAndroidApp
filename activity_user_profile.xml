<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="20dp"
        android:background="#6294B7">
        
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_icon_image"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zahra Hasan"
            android:textSize="20sp"
            android:fontFamily="@font/francois_one"
            android:layout_toRightOf="@id/profile_image"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zahra_Hasan"
            android:textSize="14sp"
            android:fontFamily="@font/advent_pro_semibold"
            android:layout_toRightOf="@id/profile_image"
            android:layout_below="@id/full_name"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"/>

        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-50dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#6294B7"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/product_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/product_icon_image_new"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/product_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Products"
                    android:textSize="18sp"
                    android:fontFamily="@font/francois_one"
                    android:layout_below="@+id/product_icon"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#6294B7"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/scan_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/scan_image_icon"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/scan_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scanning"
                    android:textSize="18sp"
                    android:fontFamily="@font/francois_one"
                    android:layout_below="@+id/scan_icon"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusBottomEnd="@dimen/material_emphasis_high_type"
            app:boxBackgroundColor="@color/common_google_signin_btn_text_dark"
            android:hint="Full Name"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/account_avatar_profile_human_man_user_30448"
                android:drawablePadding="10dp"
                android:text="Zahra Hasan"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusBottomEnd="@dimen/material_emphasis_high_type"
            app:boxBackgroundColor="@color/common_google_signin_btn_text_dark"
            android:hint="Email"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_email_512"
                android:drawablePadding="10dp"
                android:text="zahrasolat6@gmail.com"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusBottomEnd="@dimen/material_emphasis_high_type"
            app:boxBackgroundColor="@color/common_google_signin_btn_text_dark"
            android:hint="Phone Number"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/phone_512"
                android:drawablePadding="10dp"
                android:text="+923245822275"/>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:boxCornerRadiusBottomEnd="@dimen/material_emphasis_high_type"
            app:boxBackgroundColor="@color/common_google_signin_btn_text_dark"
            android:hint="Password"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password_image"
                android:drawablePadding="10dp"
                android:text="qazwsx123"/>


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000"
            android:fontFamily="@font/bungee"
            android:text="Update"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>